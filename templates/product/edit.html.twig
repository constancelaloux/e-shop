{% extends "base.html.twig" %}

{% form_theme formView _self %}
{% block title %}
	Edition de
	{{ product.name }}
{% endblock %}

{% block body %}
	<h1>Editer le produit
		{{ product.name }}</h1>
	{{ form_start(formView) }}
	{{ form_errors(formView) }}

	<div class="row">
		<div class="col">
			{{ form_row(formView.name) }}
			{{ form_row(formView.price) }}</div>
		<div class="col">
			{{ form_row(formView.mainPicture) }}
			{{ form_row(formView.category) }}
			{{ form_row(formView.shortDescription) }}
		</div>
	</div>
	<button type="submit" class="btn btn-primary">
		<i class="fas fa-save">
			Cr√©er le produit
		</i>
	</button>
	{{ form_end(formView) }}
{% endblock %}

{% block form_row %}
	<div class="form-group">
		{{ form_label(form) }}
		{{ form_widget(form, {'attr': {'class': 'form-control'} }) }}
		{{ form_help(form) }}
		{{ form_errors(form) }}
	</div>
{% endblock %}
