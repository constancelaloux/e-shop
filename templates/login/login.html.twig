{% extends 'base.html.twig' %}

{% block title %}
	Connexion
{% endblock %}

{% block body %}
	<h1>Connexion</h1>
	{% if error %}
		<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
	{% endif %}

	<form action="{{ path('app_login') }}" method="post">
		<label for="email">Adresse email de connexion:</label>
		<input type="text" id="email" name="_email" value="{{ last_username }}" placeholder="Adresse email"/>

		<label for="password">Mot de passe:</label>
		<input type="password" id="password" name="_password" placeholder="Mot de passe"/>
		{# If you want to control the URL the user is redirected to on success#}
		{#<input type="hidden" name="_target_path" value="/account"/> #}
			<button type="submit" class="btn btn-primary"> <i class="fas fa-save">
				Valider
			</i>
		</button>
	</form>

{% endblock %}
